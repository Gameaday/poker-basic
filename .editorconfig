# EditorConfig configuration for Pokermon project
# This file helps maintain consistent coding styles across different editors and IDEs.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 140

# Disable function naming rule for Compose functions (they should be PascalCase)
ktlint_standard_function-naming = disabled

# Allow comments in parameter lists (common in well-documented code)
ktlint_standard_discouraged-comment-location = disabled

[*.{xml,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false