{
    // Gradle Configuration
    "gradle.view": "hierarchical",
    "gradle.nestedProjects": true,
    "gradle.autoDetection": "on",
    
    // Kotlin Language Support
    "kotlin.languageServer.enabled": true,
    "kotlin.compiler.jvm.target": "17",
    "kotlin.debugAdapter.enabled": true,
    
    // Java/JVM Configuration (for Kotlin compilation)
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    
    // Editor Settings for Kotlin
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    
    // File Associations for Kotlin-native
    "files.associations": {
        "*.kt": "kotlin",
        "*.kts": "kotlin",
        "gradle.properties": "properties",
        "*.gradle.kts": "kotlin"
    },
    
    // Git Configuration
    "git.ignoreLimitWarning": true,
    "git.autofetch": true,
    
    // Terminal Configuration for Gradle
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.shell.windows": "powershell.exe",
    
    // IntelliSense and Navigation
    "kotlin.completion.snippets.enabled": true,
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    
    // Build and Test Configuration
    "gradle.enableTasksFromRootProject": true,
    "gradle.reuseTerminalsPerTask": false,
    
    // Performance Optimizations
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.gradle/**": true,
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true
    },
    
    // Android Development (when building APK)
    "android.home": "${env:ANDROID_HOME}",
    "android.enableAdb": true,
    
    // Code Analysis
    "kotlin.linting.enabled": true,
    "editor.semanticHighlighting.enabled": true
}