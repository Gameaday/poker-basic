<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D4F2F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/gameModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_mode"
        android:textColor="#FFD700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:id="@+id/gameModeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/gameModeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/traditionalPokerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/traditional_poker"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2E8B57"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/threeCardPokerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three_card_poker"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2E8B57"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/sevenCardStudBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seven_card_stud"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2E8B57"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/adventureModeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adventure_mode"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#8B4513"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/safariModeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/safari_mode"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#228B22"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ironmanModeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ironman_mode"
            android:backgroundTint="#B8860B"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a game mode to start playing"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>